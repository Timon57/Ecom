@model List<CategoryModel>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Is Active?</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var cat in Model)
        {
            
            
            <tr>
                <td>@cat.Name</td>
                <td>@cat.Description</td>
                <td>
                    @if (cat.IsActive)
                    {
                        <span>True</span>
                    }
                    else
                    {
                        <span>False</span>
                    }
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Update" asp-route-id="@cat.Id">Update</a>
                    <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-secondary" asp-controller="Category" asp-action="Create">Create</a>