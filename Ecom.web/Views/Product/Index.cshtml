@model List<ProductModel>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category Name</th>
            <th>Price</th>
            <th>Is Active?</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pro in Model)
        {


                    <tr>
                        <td>@pro.Name</td>
                        <td>@pro.Description</td>
                        <td>@pro.CategoryName</td>
                        <td>@pro.Price</td>
                        <td>
                    @if (pro.IsActive)
                    {
                                        <span>True</span>
                    }
                    else
                    {
                                        <span>False</span>
                    }
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-controller="Product" asp-action="update" asp-route-id="@pro.Id">Update</a>
                            <a class="btn btn-danger" asp-controller="Product" asp-action="delete" asp-route-id="@pro.Id">Delete</a>
                        </td>
                    </tr>
        }
    </tbody>
</table>
<a class="btn btn-secondary" asp-controller="Product" asp-action="Create">Create</a>